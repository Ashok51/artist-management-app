<div class="music-form row mb-3 justify-content-center">
  <div class="col-md-5 offset-md-1">
    <%= f.label :title, "Title", class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control form-control-sm', placeholder: 'Enter music title', required: true %>
  </div>
</div>

<div class="music-form row mb-3 justify-content-center">
  <div class="col-md-5 offset-md-1">
    <%= f.label :album_name, "Album Name", class: 'form-label' %>
    <%= f.text_field :album_name, class: 'form-control form-control-sm', placeholder: 'Enter album name', required: true %>
  </div>
</div>

<div class="music-form row mb-3 justify-content-center">
  <div class="col-md-5 offset-md-1">
    <%= f.label :genre, "Genre", class: 'form-label' %>
    <%= f.select :genre, options_for_select(humanized_genre_names, @music.genre), { prompt: "Select Genre" }, class: 'form-select form-select-sm' %>
  </div>
</div>
