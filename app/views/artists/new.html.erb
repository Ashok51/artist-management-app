<div class="container">
  <h4 class="mb-4">Artist Artist</h4>
  <%= form_with(model: @artist) do |form| %>
    <% if @artist.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading">Oops! There were some errors:</h4>
        <ul>
          <% @artist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Artist Fields -->
    <div class="row mb-3">
      <div class="col-md-4">
        <%= form.label :full_name, class: 'form-label' %>
        <%= form.text_field :full_name, class: 'form-control form-control-sm', required: true, placeholder: 'Enter full name' %>
        <div class="invalid-feedback">Please provide a full name.</div>
      </div>

      <div class="col-md-4">
        <%= form.label :date_of_birth, class: 'form-label' %>
        <%= form.date_field :date_of_birth, class: 'form-control form-control-sm', required: true, placeholder: 'YYYY-MM-DD', max: Date.today.to_s %>
        <div class="invalid-feedback">Please provide a valid date of birth.</div>
      </div>

      <div class="col-md-4">
        <%= form.label :gender, class: 'form-label' %>
        <%= form.select :gender, ['Male', 'Female', 'Other'], {}, class: 'form-control form-control-sm', required: true %>
        <div class="invalid-feedback">Please select a gender.</div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-4">
        <%= form.label :first_released_year, class: 'form-label' %>
        <%= form.number_field :first_released_year, class: 'form-control form-control-sm', placeholder: 'Enter first released year' %>
        <div class="invalid-feedback">Please provide a valid year.</div>
      </div>

      <div class="col-md-4">
        <%= form.label :address, class: 'form-label' %>
        <%= form.text_area :address, class: 'form-control form-control-sm', required: true, placeholder: 'Enter address' %>
        <div class="invalid-feedback">Please provide an address.</div>
      </div>
    </div>
    <hr>

    <h4 class="mt-4 mb-3">Add Music</h4>

    <%= form.fields_for :musics do |music_form| %>
      <div class="row mb-3">
        <div class="col-md-4">
          <%= music_form.label :title, class: 'form-label' %>
          <%= music_form.text_field :title, class: 'form-control form-control-sm', placeholder: 'Enter music title' %>
        </div>

        <div class="col-md-4">
          <%= music_form.label :album_name, class: 'form-label' %>
          <%= music_form.text_field :album_name, class: 'form-control form-control-sm', placeholder: 'Enter album name' %>
        </div>

        <div class="col-md-2">
          <%= music_form.label :genre, class: 'form-label' %>
          <%= music_form.text_field :genre, class: 'form-control form-control-sm', placeholder: 'Enter genre' %>
        </div>
      </div>
    <% end %>

    

    <!-- Submit Button -->
    <div class="row mb-3">
      <div class="col-md-10 offset-md-2">
        <%= form.submit "Create Artist & Music", class: "btn btn-primary btn-sm" %>
      </div>
    </div>

  <% end %>
</div>
