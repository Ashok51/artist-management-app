<div class="nested-form-wrapper row mb-3 align-items-center" data-new-record="<%= f.object.new_record? %>">
  <div class="col-md-4">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control form-control-sm', placeholder: 'Enter music title' %>
  </div>

  <div class="col-md-4">
    <%= f.label :album_name, class: 'form-label' %>
    <%= f.text_field :album_name, class: 'form-control form-control-sm', placeholder: 'Enter album name' %>
  </div>

  <div class="col md-3">
    <%= f.label :genre, class: "form-label" %>
   <%= f.select :genre, humanized_genre_names, { prompt: 'Select Genre' }, class: 'form-control form-control-sm', required: true %>  </div>

  <div class="col-md-2 d-flex justify-content-start align-items-center">
    <button type="button" class="btn btn-danger btn-sm remove-music-button" data-action="nested-form#remove">
      Remove
    </button>
  </div>

  <%= f.hidden_field :_destroy %>
</div>
